{
    "compilerOptions": {
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": ["ESNext", "DOM"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmit": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "ESNext",
        "useDefineForClassFields": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@images/*": ["./src/assets/images/*"],
            "@config/*": ["./src/config/*"]
        }
    },
    "include": ["src"]
}